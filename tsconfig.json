{
    "compilerOptions": {
      "outDir": "./dist/",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "esnext",
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "jsx": "react",
      "lib": ["es6", "dom"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "./dist/"]
}
  